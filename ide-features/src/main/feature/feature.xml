<?xml version="1.0" encoding="UTF-8"?>
<!-- mvn:org.bitbucket.xadkile.sandwich/sandwich-karaf-feature/LATEST/xml -->
<features name="sandwich-karaf-feature-repo" xmlns="http://karaf.apache.org/xmlns/features/v1.4.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.4.0">

    <repository>mvn:org.bitbucket.xadkile.myide/base-features/LATEST/xml/features</repository>
    <repository>mvn:org.bitbucket.xadkile.myide/common/LATEST/xml/features</repository>
    <repository>mvn:org.bitbucket.xadkile.myide/ide/LATEST/xml/features</repository>
    <repository>mvn:org.bitbucket.xadkile.myide/message-api/LATEST/xml/features</repository>
    <repository>mvn:org.bitbucket.xadkile.myide/message-imp/LATEST/xml/features</repository>

    <repository>mvn:org.apache.aries.jax.rs/org.apache.aries.jax.rs.features/1.0.6/xml</repository>
    <repository>mvn:org.apache.aries.cdi/aries-cdi-feature/1.1.3/xml/features</repository>

    <feature name="base-features">
        <!-- tornadoFX -->
        <bundle>mvn:no.tornado/javafx-osgi/8.0.3</bundle>
        <bundle>mvn:org.glassfish/javax.json/1.1.4</bundle>
        <bundle>mvn:org.apache.httpcomponents/httpcore-osgi/4.4.14</bundle>
        <bundle>mvn:org.apache.httpcomponents/httpclient-osgi/4.5.13</bundle>
        <bundle>mvn:commons-logging/commons-logging/1.2</bundle>
        <bundle>mvn:no.tornado/tornadofx/1.7.20</bundle>
        <!-- kotlin -->
        <bundle>mvn:org.jetbrains.kotlin/kotlin-osgi-bundle/1.5.21</bundle>
        <!-- http -->
        <feature >http</feature>
        <feature >http-whiteboard</feature>
        <!-- CDI -->
        <feature >osgi-cdi-owb</feature>
        <!-- log, required by many libs, including firebase, for now dont include them here but let bundles do it -->
        <bundle dependency="true">mvn:ch.qos.logback/logback-core/1.2.5</bundle>
        <bundle dependency="true">mvn:ch.qos.logback/logback-classic/1.2.5</bundle>
    </feature>

    <feature name="myide-app">
        <feature>base-features</feature>
        <feature>common</feature>
        <feature>ide</feature>
        <feature>message-api</feature>
        <feature>message-imp</feature>
    </feature>

</features>
